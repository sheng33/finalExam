<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>QZ</param-name>
        <param-value>0</param-value>
    </context-param>
    <servlet>
        <servlet-name>leftNav</servlet-name>
        <servlet-class>controller.classNavController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>leftNav</servlet-name>
        <url-pattern>/leftNav</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchSite</servlet-name>
        <servlet-class>controller.Search.searchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchSite</servlet-name>
        <url-pattern>/Search/searchSite</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchCarPath</servlet-name>
        <servlet-class>controller.Search.searchCarPath</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchCarPath</servlet-name>
        <url-pattern>/Search/searchCarPath</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchCar</servlet-name>
        <servlet-class>controller.Search.searchCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchCar</servlet-name>
        <url-pattern>/Search/searchCar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchCarId</servlet-name>
        <servlet-class>controller.Search.searchCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchCarId</servlet-name>
        <url-pattern>/Search/searchCarId</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchSiteCar</servlet-name>
        <servlet-class>controller.Search.searchSiteCar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchSiteCar</servlet-name>
        <url-pattern>/Search/searchSiteCar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.loginControll</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cxCar</servlet-name>
        <servlet-class>controller.Search.carMsg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cxCar</servlet-name>
        <url-pattern>/Page/cxCar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>jccxSite</servlet-name>
        <servlet-class>controller.Search.siteMsg</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>jccxSite</servlet-name>
        <url-pattern>/Page/jccxSite</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addSiteName</servlet-name>
        <servlet-class>controller.addController.addSiteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addSiteName</servlet-name>
        <url-pattern>/admin/addSiteName</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addCarController</servlet-name>
        <servlet-class>controller.addController.addCarController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addCarController</servlet-name>
        <url-pattern>/admin/addCar</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>cxSite</servlet-name>
        <servlet-class>controller.Search.pageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cxSite</servlet-name>
        <url-pattern>/Page/cxSite</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>encoding-filter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>forceEncoding</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encoding-filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>MyFilterConfig</filter-name>
        <filter-class>MyFilterConfig</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilterConfig</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>
